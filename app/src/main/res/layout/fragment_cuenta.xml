<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/account_usuario_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/user" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/account_name_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apellido Completo"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="#0A0" />

                <TextView
                    android:id="@+id/account_user_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="15dp"
                    android:textStyle="italic" />


            </LinearLayout>


        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:columnCount="5"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:layout_width="60pt"
                android:layout_height="20pt"
                android:layout_columnSpan="2"
                android:gravity="center_vertical"
                android:text="Nombre:"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/account_name"
                android:layout_width="match_parent"
                android:layout_height="15pt"
                android:layout_columnSpan="3"
                android:background="@color/backgroundInput"
                android:text="Beycker Alexis" />

            <TextView
                android:layout_width="60pt"
                android:layout_height="20pt"
                android:layout_columnSpan="2"
                android:gravity="center_vertical"
                android:text="Username:"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/account_username"
                android:layout_width="match_parent"
                android:layout_height="15pt"
                android:layout_columnSpan="3"
                android:background="@color/backgroundInput"
                android:text="Agredo Mosquera" />

            <TextView
                android:layout_width="60pt"
                android:layout_height="20pt"
                android:layout_columnSpan="2"
                android:gravity="center_vertical"
                android:text="Carrera:"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/account_study"
                android:layout_width="match_parent"
                android:layout_height="15pt"
                android:layout_columnSpan="3"
                android:background="@color/backgroundInput"
                android:text="Ingenieria de sistemas" />

            <TextView
                android:layout_width="60pt"
                android:layout_height="20pt"
                android:layout_columnSpan="2"
                android:gravity="center_vertical"
                android:text="Semestre:"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/account_semester"
                android:layout_width="match_parent"
                android:layout_height="15pt"
                android:layout_columnSpan="3"
                android:background="@color/backgroundInput"
                android:text="7" />

            <TextView
                android:layout_width="60pt"
                android:layout_height="20pt"
                android:layout_columnSpan="2"
                android:gravity="center_vertical"
                android:text="Celular:"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/account_phone"
                android:layout_width="match_parent"
                android:layout_height="15pt"
                android:layout_columnSpan="3"
                android:background="@color/backgroundInput"
                android:text="3155203785" />

            <TextView
                android:layout_width="60pt"
                android:layout_height="20pt"
                android:layout_columnSpan="2"
                android:gravity="center_vertical"
                android:text="E-mail:"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/account_email"
                android:layout_width="match_parent"
                android:layout_height="15pt"
                android:layout_columnSpan="3"
                android:background="@color/backgroundInput"
                android:text="Vendedor" />


        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            >

            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/logout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Log Out"></Button>


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
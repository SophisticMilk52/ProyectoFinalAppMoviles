<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/help"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/titulo_pregunta_txt"
            android:id="@+id/pregunta_img"
            />

        <TextView
            android:id="@+id/titulo_pregunta_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Esto es el titulo de la pregunta"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:textSize="20dp"
            />



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="61pt">

        <TextView
            android:id="@+id/contenido_pregunta_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="Esto es el cuerpo de la preguntassssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
            android:textSize="20dp"
            android:padding="15dp"
            android:inputType="text|textMultiLine"
            />

    </ScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="#4BE08D">

    </LinearLayout>






</LinearLayout>